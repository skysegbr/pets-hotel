@page
@model PeatHotel.Pages.Hospedagems.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Hospedagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Hospedagem.hospedagemId" />
            <div class="form-group">
                <label asp-for="Hospedagem.hospedagemTipoId" class="control-label"></label>
                <select asp-for="Hospedagem.hospedagemTipoId" class="form-control" asp-items="ViewBag.hospedagemTipoId"></select>
                <span asp-validation-for="Hospedagem.hospedagemTipoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hospedagem.peatId" class="control-label"></label>
                <select asp-for="Hospedagem.peatId" class="form-control" asp-items="ViewBag.peatId"></select>
                <span asp-validation-for="Hospedagem.peatId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hospedagem.clienteId" class="control-label"></label>
                <select asp-for="Hospedagem.clienteId" class="form-control" asp-items="ViewBag.clienteId"></select>
                <span asp-validation-for="Hospedagem.clienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hospedagem.servicoId" class="control-label"></label>
                <select asp-for="Hospedagem.servicoId" class="form-control" asp-items="ViewBag.servicoId"></select>
                <span asp-validation-for="Hospedagem.servicoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
